# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 0
trim_trailing_whitespace = true

# Markdown
[*.md]
indent_size = 4
indent_style = space
trim_trailing_whitespace = false

# Python
[*.py]
indent_size = 4
indent_style = space
max_line_length = 120


# Shell
[*.sh]
indent_size = 2
indent_style = space
trim_trailing_whitespace = false

# Python
[*.py]
indent_size = 4
indent_style = space
max_line_length = 120


# Shell
[*.sh]


